<h1 class = "col-sm-4">
    Sign In Here
</h1>

<form action="/users/create-session" method="POST">
    <div class = "form-group">
        <div class = "col-sm-4">
            <label for="inputEmail">Email</label>
            <input type="email" name="email" placeholder="Email" id = "inputEmail" class = "form-control"required>            
        </div>
    </div>
    <div class = "form-group">
        <div class = "col-sm-4">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" placeholder="Password" id = "inputPassword" class="form-control" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4">
            <%- recaptcha %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <button type = "submit" class="btn btn-primary">Sign In</button>
        </div>
    </div>
</form>

