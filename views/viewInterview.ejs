
   
<h3>
    <%= interview.company%>
</h3>

<h3>
    <%= interview.date%>
</h3>

<br>
<form action="/interviews/<%= interview._id %>/addStudentInterview" method="POST" id= "add-student-interview">
    <div class = "form-group">
        <div class = "col-sm-4">
            <label for="inputStudent">ADD STUDENT</label>
            <input type="text" name="student" placeholder="Student Name" id = "inputStudent" class = "form-control"required>            
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4">
            <button type = "submit" class="btn btn-primary">Add New Student</button>
        </div>
    </div>
</form>



<table class="table">
    <thead class = "thead-dark">
    <tr>
        <th scope="col">S. No</th>
        <th scope="col"> Name</th>
        <th scope="col">Batch</th>
        <th scope="col">College</th>
        <th scope="col">Result</th>
        <th scope="col">Update</th>
    </tr>
    </thead>
    <tbody>
        <%if(students.length >0){%>
            <%for(let i=0;i<students.length;i++){%>
                <tr>
                <form class = "update-student-form" action="/results/<%= interview._id%>/<%= students[i]._id%>" method = "POST">
                    <th scope="row"><%= i+1%></th>
                    <td><%= students[i].name %></td>
                    <td><%= students[i].batch %></td>
                    <td><%= students[i].college %></td>
                    <td>
                            <input class = "studentId" type="hidden" name = "studentId" value = "<%= students[i]._id%>">
                            <input class = "interviewId" type="hidden" name = "interviewId" value = "<%= interview._id%>">
                            <select class="selectpicker" data-style="btn-info" name="selectpicker">   
                                <option value="<%= studentResult[students[i]._id].result%>"><%= studentResult[students[i]._id].result%></option>     
                                <option value="Did Not Attempt">Did Not Attempt</option>
                                <option value="Pass">Pass</option>
                                <option value="Fail">Fail</option>
                                <option value="On Hold">On Hold</option>
                            </select>  
                    </td>
                    <td>
                        <button type = "submit" class="btn btn-primary btn-block">Update</button>
                    </td>
                </form>
                </tr>
            <%}%>
            
        <%}else{%>
            
            <h3>No data to display</h3>
        <%}%>
    </tbody>

</table>
</form>

<script src="/js/add_interview.js"></script>

